




BoxLayout:
    # orientation: 'vertical'
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"

        TextInput:
            id: input_number
            text: "30"
            font_size: 48
            multiline: False
            on_text: app.calculation()

        BoxLayout:
            orientation: "vertical"

            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)


