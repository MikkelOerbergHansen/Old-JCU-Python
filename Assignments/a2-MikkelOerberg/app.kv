# create your Kivy layout in the kv language here


BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Sort by:'
                on_press: app.change_sort(app.current_sort)
                background_color: (0, 0, 0, 1)
            Spinner:
                id: 'sort_selection'
                text: app.current_sort
                values: app.sort_options
                on_text: app.change_sort(self.text)
            Label:
                text: 'Add new song...'
                size_hint_y: 0.80
            Label:
                text: 'Title:'
                size_hint_y: 0.80
            TextInput:
                id: input_title
                text: ''
                multiline: False
                size_hint_y: 0.75
                write_tab: False
            Label:
                text: 'Artist:'
            TextInput:
                id: input_artist
                text: ''
                multiline: False
                size_hint_y: 0.75
                write_tab: False
            Label:
                text: 'Year:'
            TextInput:
                id: input_year
                text: ''
                multiline: False
                size_hint_y: 0.75
                write_tab: False
            Button:
                text: 'Add Song'
                on_press: app.add_song()
            Button:
                text: 'Clear'
                on_press: app.clear_all()

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: app.is_required_text
                size_hint_y: 0.1

            GridLayout:
                orientation: 'lr-tb'

                id: entries_box
                cols: 1

            Label:
                size_hint_y: 0.1
                text: app.status_text
                color: (1,1,0,1)


